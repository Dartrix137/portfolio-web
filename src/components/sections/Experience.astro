---
import Section from "@/components/Section.astro";
import { work } from "@cv";
---

<Section title="Experiencia">
    <ul>
        {
            work.map(
                ({
                    name,
                    startDate,
                    endDate,
                    position,
                    summary,
                    highlights,
                    url,
                }) => {
                    const months = [
                        "Ene",
                        "Feb",
                        "Mar",
                        "Abr",
                        "May",
                        "Jun",
                        "Jul",
                        "Ago",
                        "Sep",
                        "Oct",
                        "Nov",
                        "Dec",
                    ];
                    const startYear = new Date(startDate).getFullYear();
                    const startMonth=new Date(startDate).getMonth()
                    const endYear =
                        endDate != null
                            ? new Date(endDate).getFullYear()
                            : "Actual";
                    const endMonth:any= endDate!=null? new Date(endDate).getMonth():""
                    const years = `${months[startMonth]} ${startYear} - ${months[endMonth]} ${endYear}`;

                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>
                                            <a
                                                href={url}
                                                title={`Ver ${name}`}
                                                target="_blank"
                                            >
                                                {name}
                                            </a>
                                        </h3>
                                        <h4>{position}</h4>
                                    </div>

                                    <time>{years}</time>
                                </header>

                                <footer>
                                    <p>{summary}</p>
                                </footer>
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
</Section>

<style>
    p {
        text-align: justify;
    }
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 600;
        font-size: 1.2rem;
    }

    article a {
        color: #e7e7e7;
    }

    article a:hover {
        text-decoration: underline;
    }

    article h4 {
        font-weight: 500;
        font-size: 1.1rem;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        font-size: 0.95rem;
        min-width: 102px;
    }

    @media (width <= 700px) {
        time {
            text-align: right;
        }
    }
</style>
